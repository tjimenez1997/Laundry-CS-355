<section id="all-tasks-section">
    <div class="container">
        <h1 class="section-title">Your Orders</h1>
        <h2 class="h3 content-title">New ({{New.length}})</h2>
        {{#each New}}
            <div class="row entry-row">
                <div class="col-lg-4 col-sm-6 col-6">
                    <span class="col-title">Status</span>
                    <span>Awaiting a Tasker</span>
                </div>
                <div class="col-lg-3 col-sm-6 col-6">
                    <span class="col-title">Services</span>
                    <span>{{this.serviceText}}</span>
                </div>
                <div class="col-lg-3 col-sm-6 col-6">
                    <span class="col-title">Pickup</span>
                    <span>{{this.pickuptime}}</span>
                </div>
                <div class="col-lg-2 col-sm-12 col-12 d-flex justify-content-lg-end justify-content-start align-items-center">
                    <a class="modal-btn" data-toggle="modal" data-target=".order-modal">View Details</a>
                </div>
            </div>
        {{/each}}

        <h2 class="h3 content-title">In Progress ({{InProgress.length}})</h2>
        {{#each InProgress}}
            <div class="row entry-row">
                <div class="col-lg-2 col-sm-6 col-6">
                    <span class="col-title">Tasker</span>
                    <p>{{this.Worker.firstname}} {{this.Worker.lastname}}</p>
                </div>
                <div class="col-lg-3 col-sm-6 col-6">
                    <span class="col-title">Services</span>
                    <span>{{this.serviceText}}</span>
                </div>
                <div class="col-lg-3 col-sm-6 col-6">
                    <span class="col-title">Pickup</span>
                    <span>{{this.pickuptime}}</span>
                </div>
                <div class="col-lg-2 col-sm-6 col-6">
                    <span class="col-title">Rate the Tasker</span>
                    <div class="taskerRating-1"></div>
                </div>
                <div class="col-lg-2 col-sm-12 col-12 d-flex justify-content-lg-end justify-content-start align-items-center">
                    <a class="modal-btn" data-toggle="modal" data-target=".order-modal">View Details</a>
                </div>
            </div>
        {{/each}}

        <h2 class="h3 content-title">Completed (2)</h2>
        <div class="row entry-row">
            <div class="col-lg-2 col-sm-6 col-6">
                <span class="col-title">Tasker</span>
                <p>Brenda Walker</p>
            </div>
            <div class="col-lg-3 col-sm-6 col-6">
                <span class="col-title">Services</span>
                <span>Wash & Dry, Dry Clean</span>
            </div>
            <div class="col-lg-3 col-sm-6 col-6">
                <span class="col-title">Pickup</span>
                <span>3:00 PM, 4/25/2019</span>
            </div>
            <div class="col-lg-2 col-sm-6 col-6">
                <span class="col-title">Rate the Tasker</span>
                <div class="taskerRating-3"></div>
            </div>
            <div class="col-lg-2 col-sm-12 col-12 d-flex justify-content-lg-end justify-content-start align-items-center">
                <a class="modal-btn" data-toggle="modal" data-target=".order-modal">View Details</a>
            </div>
        </div>
        <div class="row entry-row">
            <div class="col-lg-2 col-sm-6 col-6">
                <span class="col-title">Tasker</span>
                <p>Brenda Walker</p>
            </div>
            <div class="col-lg-3 col-sm-6 col-6">
                <span class="col-title">Services</span>
                <span>Wash & Dry, Dry Clean</span>
            </div>
            <div class="col-lg-3 col-sm-6 col-6">
                <span class="col-title">Pickup</span>
                <span>3:00 PM, 4/25/2019</span>
            </div>
            <div class="col-lg-2 col-sm-6 col-6">
                <span class="col-title">Rate the Tasker</span>
                <div class="taskerRating-4"></div>
            </div>
            <div class="col-lg-2 col-sm-12 col-12 d-flex justify-content-lg-end justify-content-start align-items-center">
                <a class="modal-btn" data-toggle="modal" data-target=".order-modal">View Details</a>
            </div>
        </div>

        <div class="modal fade order-modal" id="order-history-modal" tabindex="-1" role="dialog"
             aria-labelledby="orderDetails" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Order Details</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" class="close-btn"></span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-6 col-sm-6 col-12">
                                    <span class="col-title">Tasker</span>
                                    <span>Brenda Walker</span>
                                </div>
                                <div class="col-lg-6 col-sm-6 col-12">
                                    <span class="col-title">Pickup</span>
                                    <span>3:00 PM, 5/5/2019</span>
                                </div>
                                <div class="col-lg-6 col-sm-6 col-12">
                                    <span class="col-title">Phone</span>
                                    <span>231-022-1232</span>
                                </div>
                                <div class="col-lg-6 col-sm-6 col-12">
                                    <span class="col-title">Rate the Tasker</span>
                                    <div class="orderDetailTaskerRating-1"></div>
                                </div>
                            </div>
                            <h5 class="modal-subtitle">Wash &amp; Dry</h5>
                            <div class="row">
                                <div class="col-md-4 col-sm-4 col-4">
                                    <span class="col-title">Load Size</span>
                                    <span>Large</span>
                                    <span>Small</span>
                                </div>
                                <div class="col-md-4 col-sm-4 col-4">
                                    <span class="col-title">Number</span>
                                    <span>2</span>
                                    <span>1</span>
                                </div>
                                <div class="col-md-4 col-sm-4 col-4">
                                    <span class="col-title">Prices</span>
                                    <span>$14</span>
                                    <span>$5</span>
                                </div>
                                <div class="col-md-4 col-sm-12 col-12">
                                    <span class="col-title">Drop-off</span>
                                    <span>3:00 PM, 5/5/2019</span>
                                </div>
                                <div class="col-md-8 col-sm-12 col-12">
                                    <span class="col-title">Order Status</span>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: 40%"
                                             aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <div class="progress-labels">
                                        <span class="sm-label">Order Received</span><span
                                            class="sm-label">Picked Up</span><span class="sm-label">Cleaning</span><span
                                            class="sm-label">Dropped Off</span>
                                    </div>
                                </div>
                            </div>

                            <h5 class="modal-subtitle">Dry Clean</h5>
                            <div class="row">
                                <div class="col-md-4 col-sm-4 col-4">
                                    <span class="col-title">Category</span>
                                    <span>Jacket</span>
                                </div>
                                <div class="col-md-4 col-sm-4 col-4">
                                    <span class="col-title">Number</span>
                                    <span>1</span>
                                </div>
                                <div class="col-md-4 col-sm-4 col-4">
                                    <span class="col-title">Prices</span>
                                    <span>$10</span>
                                </div>
                                <div class="col-md-4 col-sm-12 col-12">
                                    <span class="col-title">Drop-off</span>
                                    <span>3:00 PM, 5/7/2019</span>
                                </div>
                                <div class="col-md-8 col-sm-12 col-12">
                                    <span class="col-title">Order Status</span>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: 15%"
                                             aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <div class="progress-labels">
                                        <span class="sm-label">Order Received</span><span
                                            class="sm-label">Picked Up</span><span class="sm-label">Cleaning</span><span
                                            class="sm-label">Dropped Off</span>
                                    </div>
                                </div>
                            </div>

                            <div class="row" id="cost-container">
                                <div class="col-md-4 col-6">
                                    <div class="d-flex justify-content-between">
                                        <span>Subtotal:</span>
                                        <span>$29</span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span>Service Fee:</span>
                                        <span>$8</span>
                                    </div>
                                    <div class="d-flex justify-content-between" id="model-final-total">
                                        <span>Total:</span>
                                        <span>$37</span>
                                    </div>
                                </div>
                                <div class="col-md-4 offset-md-4 offset-6"></div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript" src="/js/orderHistory.js"></script>